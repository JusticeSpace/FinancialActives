<Window x:Class="EggplantsActivies.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EggplantsActivies"
        mc:Ignorable="d"
        Title="Управление активами" Height="720" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#D9E6B5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <!-- Верхняя часть (логотип и название) -->
        <Border Grid.Row="0" Background="#4A2C6A" CornerRadius="10,10,0,0" Margin="30,30,30,0" Padding="20">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <Image Source="/Photos/Icons/EGGPLANT YJHB 1.png" Width="244" Height="217" Margin="0,0,0,20"/>
            </StackPanel>
        </Border>

        <!-- Форма авторизации -->
        <Border Grid.Row="1" Background="White" CornerRadius="0,0,10,10" Margin="30,0,30,30" Padding="30">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">
                <TextBlock Text="Управление активами" FontSize="28" Foreground="#4A2C6A" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,20,0,40"/>
                <Border Background="#F5F5F5" CornerRadius="8" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Логин" Foreground="#4A2C6A" FontSize="16" Margin="0,0,0,5"/>
                        <TextBox x:Name="LoginTextBox" Height="50" Width="350" FontSize="16" Margin="0,0,0,15" Background="White"/>
                        <TextBlock Text="Пароль" Foreground="#4A2C6A" FontSize="16" Margin="0,0,0,5"/>
                        <PasswordBox x:Name="PasswordBox" Height="50" Width="350" FontSize="16" Margin="0,0,0,20" Background="White"/>
                        <Button Content="Войти" Height="50" Width="350" Margin="0,0,0,20" Padding="15,0" Background="#A7D948" Foreground="White" FontSize="16" Click="LoginClick"/>
                    </StackPanel>
                </Border>
                <TextBlock Text="Забыли пароль?" Foreground="#A7D948" Cursor="Hand" FontSize="14" Margin="0,10,0,0" MouseLeftButtonDown="ForgotPassword_Click"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <TextBlock Text="Нет аккаунта? " Foreground="#4A2C6A" FontSize="14"/>
                    <TextBlock Text="Регистрация" Foreground="#A7D948" Cursor="Hand" FontSize="14" MouseLeftButtonDown="SignUp_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>