<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <!-- Цвета из макета Pixso -->
    <SolidColorBrush x:Key="PrimaryBackground" Color="#212121" />
    <SolidColorBrush x:Key="SecondaryBackground" Color="#303030" />
    <SolidColorBrush x:Key="AccentColor" Color="#A7D948" />
    <SolidColorBrush x:Key="TextColor" Color="#FFFFFF" />
    <SolidColorBrush x:Key="DisabledTextColor" Color="#B0BEC5" />
    <SolidColorBrush x:Key="ErrorColor" Color="#D32F2F" />

    <!-- Шрифт Roboto -->
    <FontFamily x:Key="AppFont">pack://application:,,,/Resources/#Roboto</FontFamily>

    <!-- Глобальные стили -->
    <Style TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AppFont}" />
        <Setter Property="Foreground" Value="{StaticResource TextColor}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Margin" Value="0,5" />
    </Style>

    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}" x:Key="CustomButton">
        <Setter Property="Background" Value="{StaticResource AccentColor}" />
        <Setter Property="Foreground" Value="{StaticResource TextColor}" />
        <Setter Property="FontFamily" Value="{StaticResource AppFont}" />
        <Setter Property="Padding" Value="10,5" />
        <Setter Property="Margin" Value="5" />
        <Setter Property="Height" Value="40" />
        <Setter Property="BorderThickness" Value="0" />
        <!-- Убрано CornerRadius, так как не поддерживается напрямую -->
    </Style>

    <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}" x:Key="CustomTextBox">
        <Setter Property="Foreground" Value="{StaticResource TextColor}" />
        <Setter Property="Background" Value="{StaticResource SecondaryBackground}" />
        <Setter Property="BorderBrush" Value="{StaticResource AccentColor}" />
        <Setter Property="FontFamily" Value="{StaticResource AppFont}" />
        <Setter Property="Height" Value="40" />
        <Setter Property="Margin" Value="5" />
    </Style>

    <Style TargetType="PasswordBox" BasedOn="{StaticResource {x:Type PasswordBox}}" x:Key="CustomPasswordBox">
        <Setter Property="Foreground" Value="{StaticResource TextColor}" />
        <Setter Property="Background" Value="{StaticResource SecondaryBackground}" />
        <Setter Property="BorderBrush" Value="{StaticResource AccentColor}" />
        <Setter Property="FontFamily" Value="{StaticResource AppFont}" />
        <Setter Property="Height" Value="40" />
        <Setter Property="Margin" Value="5" />
    </Style>

    <Style TargetType="DataGrid" BasedOn="{StaticResource {x:Type DataGrid}}" x:Key="CustomDataGrid">
        <Setter Property="Background" Value="{StaticResource SecondaryBackground}" />
        <Setter Property="Foreground" Value="{StaticResource TextColor}" />
        <Setter Property="BorderBrush" Value="{StaticResource AccentColor}" />
        <Setter Property="FontFamily" Value="{StaticResource AppFont}" />
        <Setter Property="RowBackground" Value="{StaticResource SecondaryBackground}" />
        <Setter Property="AlternatingRowBackground" Value="#424242" />
        <Setter Property="Margin" Value="5" />
    </Style>
</ResourceDictionary>